<!DOCTYPE html>
<html class="text-center sm:text-left h-full bg-back">
    <link href="/stylesheets/main.css" rel="stylesheet">
    <link href="/stylesheets/style.css" rel="stylesheet2">
    <body class="h-full flex flex-col bg-back">
        <!--Navbar-->
        <div class="navbar fixed h-24 w-full top-0 flex flex-row justify-between items-center mb-24 bg-gradient-to-r from-maroon to-maroon-dark shadow-gray-600 shadow-xl">
          <!--settings icon--> 
          <img
            src="https://cdn.discordapp.com/attachments/1280355262976360490/1289829540318679102/setting.png?ex=66fa3ede&is=66f8ed5e&hm=a0431fc8d07f50a621d14c1732b0d3ef68f5d1553408c150ffb660fd6fa814f7&"
            class="object-contain object-left flex ml-8 mr-20 h-12"
          />

          <!--logo-->
          <img 
            src="https://cdn.discordapp.com/attachments/1286925382632865804/1290021310797189271/Dormie_app_Gray.png?ex=66faf177&is=66f99ff7&hm=08162744a28d74d86402a2a69e227a5c38003eb9ad7a1f7f0834b4fb6b8c16aa&"
            class="object-contain h-full"
          />

          <!--text and search icon-->
          <div class="flex flex-row">
            <a href="/search">
            <img
              src="https://cdn.discordapp.com/attachments/1280355262976360490/1290168712434941952/Magnifying_Glass.png?ex=66fb7abf&is=66fa293f&hm=bda1474115b60cad013937e3348c359704c6cec6dc9c67886fa31112daf135cd&"
              class="object-contain object-right mr-8 h-12"
            />
            </a>
          <a href="/chats">
            <img
              src="https://cdn.discordapp.com/attachments/1280355262976360490/1289826503818739762/communication.png?ex=66fa3c0a&is=66f8ea8a&hm=59f51764c7018fe1385d996ebb89a88666dd0810ffbe04016f40385015f1fe0e&"
              class="object-contain object-right mr-8 h-12"
            />
          </a>
          </div>
          
        </div>

        <!--Content-->
        <div class="flex flex-row justify-center space-y-24">
            <!--Card Container-->
            <div class="mx-32 h-full flex flex-col bg-scroll space-y-12">
              <!--space at the stop to prevent first card from get covered-->
              <div class="bg-back mb-24 p-10">
                  <h1 class="font-bold ">Recommended Dormies</h1>
              </div>
                <!--Card-->
                <% users.forEach(function(user) { %>
                <div class="max-w-sm w-full lg:max-w-full lg:flex shadow-gray-600 shadow-lg">
                    <div class="lg:h-auto lg:w-48 flex-none border-gray-400 lg:border-l lg:border-t lg:border-b lg:border-r lg:border-gray-400 bg-white text-center ">
                      <img
                          src="<%= user.uploadedFile ? '/uploads/' + user.uploadedFile : '/images/defaultpfp.jpg' %>"
                          class="h-full object-none object-center shaowd-lg rounded-l lg:rounded-l lg:rounded-t"
                      />
                    </div>

                    <!---->
                    <div class="flex flex-row w-full h-80 border-r border-b border-l border-gray-400 lg:border-l-0 lg:border-t lg:border-gray-400 bg-white rounded-r-lg p-4 justify-between leading-normal">
                      
                        <!--Text within card-->
                      <div class="h-full pl-4 pr-24 flex flex-col justify-between leading-normal">
                        <!--header and bio-->
                        <div class="h-full">
                            <div class="text-gray-900 font-bold text-2xl mb-2"><%= user.first_name %> <%= user.last_name %></div>
                            <p class="text-gray-700 text-base h-full"><%= user.about %></p>
                        </div>

                        <!--tags-->
                        <div class="flex flex-row justify-around mr-24">
                          <p>
                            Major: <%= user.major %>
                          </p>
                          <p>
                            Dorm: <%= user.dorm %>
                          </p>
                          <p>
                            Gender: <%= user.gender %>
                          </p>
                          <p>
                            Class: <%= user.class_year %>
                          </p>
                        </div>

                      </div>
                      <!--like button-->
                      <div class="flex items-center justify-center">
                        <img
                          src="https://cdn.discordapp.com/attachments/1280355262976360490/1290027947482288191/Check_mark.png?ex=66faf7a6&is=66f9a626&hm=d7d8ee8476aa37a3ceb9623064375c4dab6cb5106977930bb76e49e024a7e419&"
                          class="object-contain h-24 mx-24"
                        />
                      </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </body>
</html>