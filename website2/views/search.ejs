<!DOCTYPE html> 
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Page</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="/stylesheets/main.css" rel="stylesheet">
</head>

<body class="bg-back flex flex-col justify-start items-center min-h-screen">
    <!-- Navbar -->
    <div class="navbar h-24 w-full flex flex-row justify-between items-center mb-24 bg-gradient-to-r from-maroon to-maroon-dark shadow-lg shadow-gray-600 px-4">
        <!-- Settings Icon --> 
         <a href="/settings">
        <img
        src="https://cdn.discordapp.com/attachments/1280355262976360490/1289829540318679102/setting.png?ex=66fa3ede&is=66f8ed5e&hm=a0431fc8d07f50a621d14c1732b0d3ef68f5d1553408c150ffb660fd6fa814f7&"
        class="object-contain object-left flex ml-8 mr-20 h-12"
        />
         </a>
        <!--logo-->
        <a href="/home" class="object-contain h-full">
            <img 
              src="https://cdn.discordapp.com/attachments/1286925382632865804/1290021310797189271/Dormie_app_Gray.png?ex=66faf177&is=66f99ff7&hm=08162744a28d74d86402a2a69e227a5c38003eb9ad7a1f7f0834b4fb6b8c16aa&"
              class="object-contain h-full"
            />
            </a>
        <!--text and search icon-->
        <div class="flex flex-row">
        <a href="/search">
        <img
            src="https://cdn.discordapp.com/attachments/1280355262976360490/1290168712434941952/Magnifying_Glass.png?ex=66fb7abf&is=66fa293f&hm=bda1474115b60cad013937e3348c359704c6cec6dc9c67886fa31112daf135cd&"
            class="object-contain object-right mr-8 h-12"
        />
        </a>
        <a href="/chats">
        <img
            src="https://cdn.discordapp.com/attachments/1280355262976360490/1289826503818739762/communication.png?ex=66fa3c0a&is=66f8ea8a&hm=59f51764c7018fe1385d996ebb89a88666dd0810ffbe04016f40385015f1fe0e&"
            class="object-contain object-right mr-8 h-12"
            />
        </a>
        </div>
    </div>

    <div class="bg-white p-6 rounded-lg shadow-lg text-center w-full max-w-4xl mx-4">
    <h1 class="text-2xl font-bold mb-6">Search Interests!</h1>
    <div class="flex flex-col items-center">
      <div class="flex flex-row space-x-2">
        <input type="text" id="firstNameInput" placeholder="First Name" class="border border-gray-300 rounded-md px-4 py-2 w-40 focus:outline-none focus:ring-2 focus:ring-maroon-light" />
        <input type="text" id="lastNameInput" placeholder="Last Name" class="border border-gray-300 rounded-md px-4 py-2 w-40 focus:outline-none focus:ring-2 focus:ring-maroon-light" />
      </div>
      <div class="flex flex-row space-x-2 mt-2">
        <input type="text" id="majorInput" placeholder="Major" class="border border-gray-300 rounded-md px-4 py-2 w-40 focus:outline-none focus:ring-2 focus:ring-maroon-light" />
        <input type="text" id="dormInput" placeholder="Dorm" class="border border-gray-300 rounded-md px-4 py-2 w-40 focus:outline-none focus:ring-2 focus:ring-maroon-light" />
      </div>
      <button onclick="performSearch()" class="bg-maroon text-white px-6 py-2 rounded-md hover:bg-maroon-dark transition duration-300 mt-4">Search</button>
    </div>
  </div>

    <!-- Search Results -->
    <div class="flex flex-col items-center mt-4 w-full max-w-4xl mx-4">
        <div id="searchResults" class="bg-white p-6 rounded-lg shadow-lg w-full flex flex-col items-center">
          <!-- Results will be appended here -->
        </div>
      </div>

    <!-- Filter Popup -->
    <div id="popup" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 flex justify-center items-center">
        <div class="bg-white p-8 rounded-lg shadow-lg">
            <h2 class="text-xl font-bold mb-4">Choose Filters</h2>
            <button class="bg-gray-200 px-4 py-2 m-2 rounded-md hover:bg-gray-300" onclick="addFilter('Male')">Male</button>
            <button class="bg-gray-200 px-4 py-2 m-2 rounded-md hover:bg-gray-300" onclick="addFilter('Female')">Female</button>
            <button class="bg-gray-200 px-4 py-2 m-2 rounded-md hover:bg-gray-300" onclick="addFilter('Sophomore')">Sophomore</button>
            <button class="bg-maroon-700 text-white px-4 py-2 m-2 rounded-md hover:bg-maroon-dark" onclick="closePopup()">Close</button>
        </div>
    </div>

    <!-- JavaScript -->
    <script>
        function performSearch() {
          const firstName = document.getElementById('firstNameInput').value.trim();
          const lastName = document.getElementById('lastNameInput').value.trim();
          const major = document.getElementById('majorInput').value.trim();
          const dorm = document.getElementById('dormInput').value.trim();
    
          const searchCriteria = {
            first_name: firstName,
            last_name: lastName,
            major: major,
            dorm: dorm
          };
    
          // Send AJAX POST request to '/search'
          fetch('/search', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify(searchCriteria)
          })
          .then(response => response.json())
          .then(data => {
            // Handle the response
            const resultsDiv = document.getElementById('searchResults');
            resultsDiv.innerHTML = '';
            const results = data.results;
    
            if (results && results.length > 0) {
              results.forEach(user => {
                // Create card element
                const card = document.createElement('div');
                card.className = "max-w-sm w-full lg:max-w-full lg:flex shadow-gray-600 shadow-lg m-4";
    
                card.innerHTML = `
                  <div class="lg:h-auto lg:w-48 flex-none border-gray-400 lg:border-l lg:border-t lg:border-b lg:border-r lg:border-gray-400 bg-white text-center">
                    <img src="${user.uploadedFile || 'default_image_url'}" class="h-full object-cover object-center shadow-lg rounded-l lg:rounded-t" alt="${user.first_name} ${user.last_name}" />
                  </div>
                  <div class="flex flex-row h-80 border-r border-b border-l border-gray-400 lg:border-l-0 lg:border-t lg:border-gray-400 bg-white rounded-r-lg p-4 justify-between leading-normal w-full">
                    <div class="h-full pl-4 pr-24 flex flex-col justify-between leading-normal">
                      <div class="h-full">
                        <div class="text-gray-900 font-bold text-2xl mb-2">${user.first_name} ${user.last_name}</div>
                        <p class="text-gray-700 text-base h-full">${user.about}</p>
                      </div>
                      <div class="flex flex-row justify-around mr-24 mt-4">
                        <p class="text-sm text-gray-600">Major: ${user.major}</p>
                        <p class="text-sm text-gray-600">Dorm: ${user.dorm}</p>
                        <p class="text-sm text-gray-600">Gender: ${user.gender}</p>
                      </div>
                    </div>
                    <div class="flex items-center justify-center">
                      <img src="like_icon_url" class="object-contain h-24 mx-4 cursor-pointer" alt="Like" />
                    </div>
                  </div>
                `;
    
                resultsDiv.appendChild(card);
              });
            } else {
              resultsDiv.innerHTML = '<p>No results found.</p>';
            }
          })
          .catch(error => {
            console.error('Error:', error);
          });
        }
      </script>
             
      
</body>

</html>
