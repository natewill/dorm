<!DOCTYPE html> 
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Page</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="/stylesheets/main.css" rel="stylesheet">
</head>

<body class="bg-back flex flex-col justify-start items-center min-h-screen">
    <!-- Navbar -->
    <div class="navbar h-24 w-full flex flex-row justify-between items-center mb-24 bg-gradient-to-r from-maroon to-maroon-dark shadow-lg shadow-gray-600 px-4">
        <!-- Settings Icon --> 
        <img
        src="https://cdn.discordapp.com/attachments/1280355262976360490/1289829540318679102/setting.png?ex=66fa3ede&is=66f8ed5e&hm=a0431fc8d07f50a621d14c1732b0d3ef68f5d1553408c150ffb660fd6fa814f7&"
        class="object-contain object-left flex ml-8 mr-20 h-12"
        />
        <!--logo-->
        <img 
        src="https://cdn.discordapp.com/attachments/1286925382632865804/1290021310797189271/Dormie_app_Gray.png?ex=66faf177&is=66f99ff7&hm=08162744a28d74d86402a2a69e227a5c38003eb9ad7a1f7f0834b4fb6b8c16aa&"
        class="object-contain h-full"
        />
        <!--text and search icon-->
        <div class="flex flex-row">
        <img
            src="https://cdn.discordapp.com/attachments/1280355262976360490/1290168712434941952/Magnifying_Glass.png?ex=66fb7abf&is=66fa293f&hm=bda1474115b60cad013937e3348c359704c6cec6dc9c67886fa31112daf135cd&"
            class="object-contain object-right mr-8 h-12"
        />
        <img
            src="https://cdn.discordapp.com/attachments/1280355262976360490/1289826503818739762/communication.png?ex=66fa3c0a&is=66f8ea8a&hm=59f51764c7018fe1385d996ebb89a88666dd0810ffbe04016f40385015f1fe0e&"
            class="object-contain object-right mr-8 h-12"
            />
        </div>
    </div>

    <div class="bg-white p-6 rounded-lg shadow-lg text-center w-full max-w-4xl mx-4">
        <h1 class="text-2xl font-bold mb-6">Search Interests!</h1>
        <div class="flex justify-center space-x-2 items-center">
            <!-- Filter Button -->
            <button onclick="openFilters()"
                class="bg-maroon text-white px-4 py-2 rounded-md hover:bg-maroon-dark transition duration-300 flex items-center justify-center">
                <img src="data:image/png;base64," alt="Filter" class="h-6 w-6" />
            </button>
            <!-- Search Input and Button -->
            <input type="text" id="searchInput" placeholder="Search..."
                class="border border-gray-300 rounded-md px-4 py-2 w-full sm:w-80 focus:outline-none focus:ring-2 focus:ring-maroon-light" />
            <button onclick="performSearch()"
                class="bg-maroon text-white px-6 py-2 rounded-md hover:bg-maroon-dark transition duration-300">Search</button>
        </div>

    <!-- Search Results -->
    <div class="flex flex-col items-center mt-4 w-full max-w-4xl mx-4">
        <div id="searchResults" class="bg-white p-6 rounded-lg shadow-lg w-full flex flex-col items-center">
        </div>
    </div>

    <!-- Filter Popup -->
    <div id="popup" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 flex justify-center items-center">
        <div class="bg-white p-8 rounded-lg shadow-lg">
            <h2 class="text-xl font-bold mb-4">Choose Filters</h2>
            <button class="bg-gray-200 px-4 py-2 m-2 rounded-md hover:bg-gray-300" onclick="addFilter('Male')">Male</button>
            <button class="bg-gray-200 px-4 py-2 m-2 rounded-md hover:bg-gray-300" onclick="addFilter('Female')">Female</button>
            <button class="bg-gray-200 px-4 py-2 m-2 rounded-md hover:bg-gray-300" onclick="addFilter('Sophomore')">Sophomore</button>
            <button class="bg-maroon-700 text-white px-4 py-2 m-2 rounded-md hover:bg-maroon-dark" onclick="closePopup()">Close</button>
        </div>
    </div>

    <!-- JavaScript -->
    <script>
        const users = [
            {
                first_name: "John",
                last_name: "Doe",
                about: "A passionate computer science student.",
                major: "Computer Science",
                dorm: "Maple Hall",
                gender: "Male",
                class: "Senior",
                image: "https://st2.depositphotos.com/1054749/6808/i/450/depositphotos_68088587-stock-photo-portrait-of-a-young-african.jpg"
            },
            {
                first_name: "Jane",
                last_name: "Smith",
                about: "Enthusiastic gamer and avid reader.",
                major: "Literature",
                dorm: "Oak Hall",
                gender: "Female",
                class: "Junior",
                image: "https://st2.depositphotos.com/1054749/6808/i/450/depositphotos_68088587-stock-photo-portrait-of-a-young-african.jpg"
            },
            {
                first_name: "Alice",
                last_name: "Johnson",
                about: "Interested in on-campus activities and leadership.",
                major: "Business Administration",
                dorm: "Cochrane",
                gender: "Female",
                class: "Sophomore",
                image: "https://st2.depositphotos.com/1054749/6808/i/450/depositphotos_68088587-stock-photo-portrait-of-a-young-african.jpg"
            },
        ];

        function performSearch() {
            const input = document.getElementById('searchInput').value.toLowerCase().trim();
            const resultsDiv = document.getElementById('searchResults');
            resultsDiv.innerHTML = '';

            if (input) {
                const filteredUsers = users.filter(user => {
                    return (
                        user.first_name.toLowerCase().includes(input) ||
                        user.last_name.toLowerCase().includes(input) ||
                        user.major.toLowerCase().includes(input) ||
                        user.dorm.toLowerCase().includes(input) ||
                        user.gender.toLowerCase().includes(input) ||
                        user.class.toLowerCase().includes(input) ||
                        user.about.toLowerCase().includes(input) 
                    );
                });

                if (filteredUsers.length > 0) {
                    filteredUsers.forEach(user => {
                        // Create card element
                        const card = document.createElement('div');
                        card.className = "w-full bg-white rounded-lg shadow-lg m-4 flex flex-row overflow-hidden";

                        card.innerHTML = `
                            <!-- Image Section -->
                            <div class="w-48 flex-none">
                                <img src="${user.image}" class="w-full h-full object-cover" alt="${user.first_name} ${user.last_name}" />
                            </div>
                            <!-- Content Section -->
                            <div class="flex flex-col justify-between p-4 flex-grow">
                                <div>
                                    <div class="text-gray-900 font-bold text-2xl mb-2">${user.first_name} ${user.last_name}</div>
                                    <p class="text-gray-700 text-base mb-4">${user.about}</p>
                                    <div class="space-y-1 text-sm text-gray-600">
                                        <p>Major: ${user.major}</p>
                                        <p>Dorm: ${user.dorm}</p>
                                        <p>Gender: ${user.gender}</p>
                                        <p>Class: ${user.class}</p>
                                    </div>
                                </div>
                                <div class="flex justify-end mb-8">
                                    <img src="https://cdn.discordapp.com/attachments/1280355262976360490/1290027947482288191/Check_mark.png" class="object-contain h-6 w-6 cursor-pointer" alt="Like" />
                                </div>
                            </div>
                        `;

                        resultsDiv.appendChild(card);
                    });
                } else {
                    resultsDiv.innerHTML = `<p class="text-gray-700">No results found for "<strong>${input}</strong>".</p>`;
                }
            } else {
                resultsDiv.innerHTML = `<p class="text-gray-700">Please enter a search term.</p>`;
            }
        }

        function openFilters() {
            document.getElementById('popup').classList.remove('hidden');
        }

        function closePopup() {
            document.getElementById('popup').classList.add('hidden');
        }

        function addFilter(filterText) {
            const searchInput = document.getElementById('searchInput');
            if (!searchInput.value.toLowerCase().includes(filterText.toLowerCase())) {
                searchInput.value += ` ${filterText}`;
            }
            closePopup();
            performSearch();
        }
    </script>
</body>

</html>
