          <option value="Wireless Communications and Signal Processing">Wireless Communications and Signal Processing</option>
          <option value="Theatre Arts">Theatre Arts</option>
          <!-- Add other majors as needed -->
        </select>

        <select id="dormInput" class="border border-gray-300 rounded-lg px-4 py-2 w-40 focus:outline-none focus:ring-2 focus:ring-maroon-light">
          <option value="">Select Dorm</option>
          <option value="Cochrane">Cochrane</option>
          <option value="West AJ">West AJ</option>
          <option value="East AJ">East AJ</option>
          <option value="Pritchard">Pritchard</option>
          <option value="Slusher">Slusher</option>
          <option value="GLC at Donaldson Brown">GLC at Donaldson Brown</option>
          <option value="O'Shaughnessy">O'Shaughnessy</option>
          <option value="Payne">Payne</option>
          <option value="Campbell">Campbell</option>
          <option value="Hillcrest">Hillcrest</option>
          <option value="Hoge">Hoge</option>
          <option value="Peddrew-Yates">Peddrew-Yates</option>
          <option value="CID">CID</option>
          <option value="Miles">Miles</option>
          <option value="Vawter">Vawter</option>
          <option value="Off Campus">Off Campus</option>
          <!-- Add other dorms as needed -->
        </select>
      </div>
      <button onclick="performSearch()" class="bg-maroon text-white px-6 py-2 rounded-lg hover:bg-maroon-dark transition duration-300 mt-4">Search</button>
    </div>
  </div>

    <!-- Search Results -->
    <div class="flex flex-col items-center mt-4 w-full rounded-lg max-w-4xl mx-4">
        <div id="searchResults" class="p-6 rounded-lgw-full flex flex-col items-center">
          <!-- Results will be appended here -->
        </div>
      </div>

    <!-- JavaScript -->
    <script>
        function performSearch() {
          const firstName = document.getElementById('firstNameInput').value.trim();
          const lastName = document.getElementById('lastNameInput').value.trim();
          const major = document.getElementById('majorInput').value.trim();
          const dorm = document.getElementById('dormInput').value.trim();
          
          const searchCriteria = {
            first_name: firstName,
            last_name: lastName,
            major: major,
            dorm: dorm
          };
    
          // Send AJAX POST request to '/search'
          fetch('/search', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify(searchCriteria)
          })
          .then(response => response.json())
          .then(data => {
            // Handle the response
            const resultsDiv = document.getElementById('searchResults');
            resultsDiv.innerHTML = '';
            const results = data.results;
            
            if (results && results.length > 0) {
              results.forEach(user => {
                // Create card element
                const imageUrl = user.uploadedFile ? `/uploads/${user.uploadedFile}` : 'https://st2.depositphotos.com/1054749/6808/i/450/depositphotos_68088587-stock-photo-portrait-of-a-young-african.jpg';
                const card = document.createElement('div');
                card.className = "max-w-sm w-full lg:max-w-full lg:flex shadow-gray-600 shadow-lg m-4";
                card.innerHTML = `
                <div class="max-w-sm h-60 w-full lg:max-w-full lg:flex shadow-gray-500 shadow-sm" style="border-radius: 15px 15px 15px 15px;">
                    <div class="lg:h-auto lg:w-48 flex-none border-gray-400 lg:border-l lg:border-t lg:border-b lg:border-r lg:border-gray-400 bg-white text-center " style="border-radius: 15px 15px 15px 15px;">
                      <img
                          src="${imageUrl}"
                          class="h-full object-none object-center shaowd-lg rounded-l lg:rounded-l lg:rounded-t"
                          style="border-radius: 15px 0 0 15px;"
                      />
                    </div>

                    <!--Card Content-->
                    <div class="flex flex-row w-full h-auto border-r border-b border-l border-gray-400 lg:border-l-0 lg:border-t lg:border-gray-400 bg-white rounded-r-lg p-4 justify-between leading-normal" style="border-radius: 0 15px 15px 0;">
                      
                        <!--Text within card-->
                      <div class="h-full pl-4 pr-24 flex flex-col justify-between leading-normal"> 
                        <!--header and bio-->
                        <div class="h-full">
                            <div class="text-gray-900 font-bold text-2xl mb-2">${user.first_name} ${user.last_name}</div>
                            <p class="text-gray-700 text-base h-full">${user.about}</p>
                        </div>

                        <!--tags-->
                        <div class="flex flex-row justify-around space-x-8 mr-24">
                          <p>
                            Major: ${user.major}
                          </p>
                          <p>
                            Dorm: ${user.dorm}
                          </p>
                        <p>
                            Gender: ${user.gender}
                          </p>
                          <p>
                            Class: ${user.class_year}
                          </p>
                        </div>

                      </div>
                      <!--like button-->
                      <div class="flex items-center justify-center">
                        <img
                          src="https://cdn.discordapp.com/attachments/1280355262976360490/1290027947482288191/Check_mark.png?ex=66faf7a6&is=66f9a626&hm=d7d8ee8476aa37a3ceb9623064375c4dab6cb5106977930bb76e49e024a7e419&"
                          class="object-contain h-12 mx-24"
                          style="height: 80px;"
                        />
                      </div>
                    </div>
                </div>
                `;
    
                resultsDiv.appendChild(card);
              });
            } else {
              resultsDiv.innerHTML = '<p>No results found.</p>';
            }
          })
          .catch(error => {
            console.error('Error:', error);
          });
        }
      </script>
             
      
</body>

